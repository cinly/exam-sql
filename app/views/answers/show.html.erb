<div class="row">
  <div class="col-md-6">
    <%# if @exam.image.present? %>
      <%#= image_tag(@exam.image.medium.url, class: "thumbnail") %>
    <%# else %>
      <%#= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
    <%# end %>
    <% if @photos.present? %>
      <% @photos.each_with_index do |p, index| %>
        <% if index == 0 %>
          <%= image_tag p.image.medium.url %>
        <% else %>
          <%= image_tag p.image.thumb.url %>
        <% end %>
      <% end %>
    <% else %>
      <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
    <% end %>
  </div>
  <div class="col-md-6">
    <h2><%= @exam.question %></h2>
    <div style="height: 100px;">
      <p>
        <%= @exam.answer_1 %>
        <br>
        <%= @exam.answer_2 %>
      </p>
    </div>
    <div>试题类别: <%= @exam.category_id %></div>
    <div>试题属性: ￥ <%= @exam.class_id %></div>
  </div>
</div>

<hr>

<br>
<div class="row">
  <div class="col-md-6">
    <%# if @answer.image.present? %>
      <%#= image_tag(@answer.image.medium.url, class: "thumbnail") %>
    <%# else %>
      <%#= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
    <%# end %>
    <% if @photos.present? %>
      <% @photos.each_with_index do |p, index| %>
        <% if index == 0 %>
          <%= image_tag p.image.medium.url %>
        <% else %>
          <%= image_tag p.image.thumb.url %>
        <% end %>
      <% end %>
    <% else %>
      <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
    <% end %>
  </div>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>#</th>
        <th>正确答案</th>
        <th>答案解析</th>
        <th width="100"> Options </th>
      </tr>
    </thead>
    <tbody>
      <% @answers.each do |answer| %>
      <tr>
        <td>
          <%= answer.id %>
        </td>
         <td>
           <%= answer.ture_answer%>
         </td>
         <td>
           <%= answer.description %>
         </td>
         <td>
           <%= link_to("Edit", edit_admin_answer_path(answer)) %> |
           <%= link_to("Delete", admin_answer_path(answer), method: :delete, data: { confirm: "Are your sure?" }) %>
         </td>
       </tr>
       <% end %>
     </tbody>
   </table>
