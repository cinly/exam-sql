
<hr>

<br>
<div class="row">
  <div class="col-md-6">
    <% if @photos.present? %>
      <% @photos.each_with_index do |p, index| %>
        <% if index == 0 %>
          <%= image_tag p.image.medium.url %>
        <% else %>
          <%= image_tag p.image.thumb.url %>
        <% end %>
      <% end %>
    <% else %>
      <h4>#</h4>
    <% end %>
  </div>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th><%= @exam.id %></th>
        <th><%= @exam.question%></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          #
        </td>
         <td>
           <%= @exam.answer_1 %>
           <br>
           <%= @exam.answer_2 %>
         </td>
       </tr>
     </tbody>
   </table>
